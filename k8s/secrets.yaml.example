apiVersion: v1
kind: Secret
metadata:
  name: flash-sale-secrets
  namespace: flash-sale
type: Opaque
stringData:
  # ============================================
  # This is a TEMPLATE file
  # ============================================
  # The deploy-gcp.sh script will auto-generate secrets.yaml with actual values.
  #
  # If deploying manually, copy this file to secrets.yaml and replace placeholders:
  #   cp secrets.yaml.example secrets.yaml
  #
  # Get values from GCP:
  #   CLOUD_SQL_IP: gcloud sql instances describe flash-sale-db --format='value(ipAddresses[0].ipAddress)'
  #   REDIS_IP: gcloud redis instances describe flash-sale-redis --region=us-central1 --format='value(host)'
  #   JWT_SECRET: openssl rand -hex 32
  #
  # ============================================

  DATABASE_URL: "postgresql+asyncpg://postgres:YOUR_DB_PASSWORD@CLOUD_SQL_IP:5432/flash_sale"
  JWT_SECRET_KEY: "YOUR_JWT_SECRET_KEY"
  REDIS_URL: "redis://REDIS_IP:6379/0"
